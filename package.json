{
	"name": "gavanoapi",
	"version": "1.0.0",
	"description": "",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dlowkeen/gavanoApi.git"
	},
	"author": "Donovan Lowkeen",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/dlowkeen/gavanoApi/issues"
	},
	"homepage": "https://github.com/dlowkeen/gavanoApi#readme",
	"engines": {
		"node": "10.16.3"
	},
	"main": "dist/index.js",
	"scripts": {
		"clean": "rimraf dist",
		"dev": "tsnd --respawn src/index.ts",
		"start": "node dist/index.js",
		"postinstall": "npm run clean && tsc -p .",
		"build": "npm run lint && npm run postinstall",
		"build:start": "npm run build && npm start",
		"test": "ts-mocha src/**/*.spec.ts -- --exit",
		"coverage": "nyc ts-mocha src/**/*.spec.ts --reporter=mocha-junit-reporter --exit",
		"lint": "eslint \"{,!(node_modules|dist)/**/}*.{j,t}s\" --max-warnings=6",
		"lint:fix": "prettier \"{,!(node_modules|dist)/**/}*.json\" --write && npm run lint -- --fix"
	},
	"lint-staged": {
		"*.{j,t}s": [
			"eslint --fix",
			"git add"
		],
		"{,!(node_modules|dist)/**/}*.j{s,son}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": [
				"lint-staged && npm run lint && npm test"
			]
		}
	},
	"dependencies": {
		"@types/body-parser": "^1.17.0",
		"@types/cors": "^2.8.4",
		"@types/express": "^4.16.1",
		"@types/helmet": "0.0.43",
		"@types/mongoose": "^5.5.6",
		"@types/morgan": "^1.7.35",
		"@types/node": "^12.6.8",
		"@types/passport": "^1.0.2",
		"@types/passport-google-oauth20": "^2.0.3",
		"@types/request-promise": "^4.1.42",
		"@types/urlencode": "1.1.1",
		"@types/uuid": "3.4.4",
		"body-parser": "^1.18.3",
		"cookie-session": "^1.3.3",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"helmet": "^3.16.0",
		"mongoose": "^5.6.0",
		"morgan": "^1.9.1",
		"passport": "^0.4.1",
		"passport-facebook": "^3.0.0",
		"passport-google-oauth20": "^2.0.0",
		"request-promise": "^4.2.4"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.6",
		"@types/sinon": "^7.0.9",
		"@typescript-eslint/eslint-plugin": "^2.3.2",
		"@typescript-eslint/parser": "^2.3.2",
		"chai": "^4.2.0",
		"chai-http": "^4.2.1",
		"eslint": "^6.5.0",
		"eslint-config-prettier": "^6.3.0",
		"eslint-plugin-filenames": "^1.3.2",
		"eslint-plugin-prettier": "^3.1.1",
		"husky": "^1.3.1",
		"lint-staged": "^9.4.0",
		"mocha": "^6.0.2",
		"mocha-junit-reporter": "^1.23.1",
		"nyc": "^15.0.0",
		"prettier": "^1.16.4",
		"rimraf": "^3.0.0",
		"sinon": "^7.2.7",
		"ts-mocha": "6.0.0",
		"ts-node-dev": "1.0.0-pre.40",
		"typescript": "^3.5.2"
	}
}
