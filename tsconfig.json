{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"strict": true,
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist"
	},
	"exclude": ["dist", "node_modules", "prod_node_modules", "src/**/*.spec.ts"]
}
